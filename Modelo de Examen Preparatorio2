Ejercicio 1. 

public int cantidadDePromociones(int alfajoresChocolate, int alfajoresDulceDeLeche,int alfajoresFruta){
	
	alfajoresChocolate = (alfajoresChocolate - (alfajoresChocolate % 4)) / 4; 
	return minimoDe(alfajoresChocolate, alfajoresDulceDeLeche, aldajoresFruta); 

	
} 

public int minimoDe(int a, int b, int c){

	if (a < b){
		if (a > c){
			return c;
		}
		else{
			return a;
		} 
	} 
	else{
		if (b > c){
			return b;
		}
		else{
			return c;
		}
	}	
} 

